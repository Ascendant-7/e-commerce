{
  "compilerOptions": {
    // env settings
    "target": "ES2020",
    "module": "commonjs",

    // file layout
    "rootDir": "./src",
    "outDir": "./dist",

    // config settings
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
